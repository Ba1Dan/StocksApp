<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name_section"
        android:text="@string/item_search_deafult_name_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/item_stock_name_section" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_more"
        android:text="@string/item_search_show_more"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_section"
        style="@style/item_search_btn_show_more" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_result_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_section"
        style="@style/item_search_recyclerview" />
</androidx.constraintlayout.widget.ConstraintLayout>